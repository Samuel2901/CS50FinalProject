{
    "manifest_version": 3,
    "name": "Replacer",
    "version": "1.0",

    "description": "Replaces word in forms",

    "icons":{
        "1000":"logo.png"
    },

    "permissions":["activeTab", "scripting"],

    "background": {
        "service_worker": "background.js"
    },

    "action":{
        "default_title": "Replacer",
        "default_popup": "index.html",
        "default_icon":{
            "1000": "logo.png"
        }
    },

    "commands": {
        "_execute_action": {
          "suggested_key": {
            "default": "Ctrl+U",
            "mac": "Command+U"
          }
        }
      }
}